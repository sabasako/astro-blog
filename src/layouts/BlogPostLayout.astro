---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter: data } = Astro.props;
---

<BaseLayout pageTitle={data.title}>
  <h1>{data.title}</h1>
  <p>Written by {data.author}</p>
  <slot />
  <p>{data.pubDate}</p>
  <img src={data.image.url} alt={data.image.alt} />
</BaseLayout>

<style>
  img {
    max-width: 600px;
    height: auto;
  }
</style>
